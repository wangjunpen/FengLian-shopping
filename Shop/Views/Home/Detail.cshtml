    ViewBag.Title = "商品详情";
}
@Scripts.Render("~/bundles/detail")
<script src="~/Scripts/jquery.jqzoom.js"></script>
<script src="~/Scripts/star.js"></script>
<link href="~/Content/thickbox.css" rel="stylesheet" />
<style>
     /*放大镜样式*/
    body {
        margin: 0px;
        padding: 0px;
        font-family: Arial;
    }

    a img, :link img, :visited img {
        border: none;
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
    }

    :focus {
        outline: none;
    }

    * {
        margin: 0;
        padding: 0;
    }

    p, blockquote, dd, dt {
        margin: 0 0 8px 0;
        line-height: 1.5em;
    }

    fieldset {
        padding: 0px;
        padding-left: 7px;
        padding-right: 7px;
        padding-bottom: 7px;
    }

        fieldset legend {
            margin-left: 15px;
            padding-left: 3px;
            padding-right: 3px;
            color: #333;
        }

    dl dd {
        margin: 0px;
    }

    dl dt {
    }

    .clearfix:after {
        clear: both;
        content: ".";
        display: block;
        font-size: 0;
        height: 0;
        line-height: 0;
        visibility: hidden;
    }

    .clearfix {
        display: block;
        zoom: 100;
    }

    ul#thumblist {
        display: block;
    }

        ul#thumblist li {
            float: left;
            margin-right: 2px;
            list-style: none;
        }

            ul#thumblist li a {
                display: block;
                border: 1px solid #CCC;
            }

                ul#thumblist li a.zoomThumbActive {
                    border: 1px solid red;
                }

    div#content.clearfix {
        position: relative;
        top: -550px;
        left: -150px;
    }

    .jqzoom {
        text-decoration: none;
        float: left;

    }

    #dd {
    width:308px;
    height:339px;
    }
        #dd img {
          width:281px;
    height:339px;
        margin-left:14px;
        }
</style>

<script type="text/javascript">
    /*放大镜交互jqzoom*/
    $(document).ready(function () {     
       
    });

    $(function () {
        $("dd").jqzoom({
            zoomWidth: 300,
            zoomHeight: 300,
            zoomType: 'reverse',
        })


    })

</script>

